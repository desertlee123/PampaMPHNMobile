valumes:
  mcserver_data:
    name: mcserver_data

server:
  mcserver:
    image: itzg/minecraft-server
    eviroment:
      EULA: "true"
      VERSION: 1.21.6
      GAMEMODE: survival
      TYPE: PAPER
      CONSOLE: "false"
      ONLINE_MODE: "false"
      DIFFICULTY: hard
    container_name: mcserver
    restart: always
    tty: true
    stdin_open: true
    volumes:
      - mcserver_data:/data
    ports:
      - "25565:25565"
